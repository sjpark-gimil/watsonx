
<article data-slug="<%= doc.slug %>">
  <header class="doc-head">
    <h1><%= doc.front.title %></h1>
    <div class="meta">
      <span class="pill"><%= doc.front.product %></span>
      <span class="pill">v<%= doc.front.version %></span>
      <span class="pill"><%= doc.front.level %></span>
      <span class="pill"><%= doc.front.est_minutes %> min</span>
    </div>
  </header>
  <div class="doc-body"><%- html %></div>
  <footer class="doc-foot">
    <label><input type="checkbox" class="mark-done"> Mark as done</label>
  </footer>
</article>

<script>
  // terms map for popover
  window.__TERMS__ = { <% terms.forEach(t => { %>
    "<%= (t.id || t.term) %>": { term: "<%- t.term %>", short: "<%- (t.short||'') %>", link: "/<%= lang %>/terms#<%= (t.id || t.term) %>" },
  <% }) %> };
</script>
